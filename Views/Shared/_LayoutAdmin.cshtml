@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString() ?? "";
    var adminName = HttpContextAccessor.HttpContext.Session.GetString("UserName") ?? "Admin";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WedNightFury Admin</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome Icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            background-color: #f8f9fa;
            color: #212529;
            transition: all 0.3s ease-in-out;
        }

        .sidebar {
            width: 70px;
            height: 100vh;
            background-color: #fff;
            border-right: 1px solid #dee2e6;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
            transition: all 0.3s ease-in-out;
        }

        .sidebar .logo {
            background-color: #d9232d;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 60px;
            cursor: pointer;
        }

        .sidebar .logo img {
            height: 36px;
        }

        .sidebar .nav-link {
            padding: 16px 0;
            text-align: center;
            color: #555;
            font-size: 18px;
        }

        .sidebar .nav-link:hover,
        .sidebar .nav-link.active {
            background-color: #f1f1f1;
            color: #d9232d;
        }

        .main-content {
            margin-left: 70px;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .topbar {
            background-color: #fff;
            border-bottom: 1px solid #dee2e6;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            transition: all 0.3s ease-in-out;
        }

        .search-box .input-group-text {
            background: #fff;
        }

        footer {
            padding: 10px 20px;
            background: #f1f1f1;
            font-size: 14px;
            transition: all 0.3s ease-in-out;
        }

        /* =================== DARK MODE =================== */
        body.dark-mode-admin {
            background-color: #121212;
            color: #e0e0e0;
        }

        body.dark-mode-admin .sidebar,
        body.dark-mode-admin .topbar,
        body.dark-mode-admin footer,
        body.dark-mode-admin .card,
        body.dark-mode-admin .table {
            background-color: #1e1e1e !important;
            color: #f1f1f1 !important;
            border-color: #333 !important;
        }

        body.dark-mode-admin .table thead {
            background-color: #2c2c2c !important;
        }

        body.dark-mode-admin .nav-link {
            color: #9cdcff !important;
        }

        body.dark-mode-admin .nav-link:hover {
            background-color: #2a2a2a !important;
        }

        body.dark-mode-admin .form-control,
        body.dark-mode-admin .form-select {
            background-color: #222 !important;
            color: #fff !important;
            border-color: #444 !important;
        }

        body.dark-mode-admin a {
            color: #9cdcff !important;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar d-flex flex-column align-items-center">
            <div class="logo w-100" id="logoResetAdmin">
                <img src="~/images/logo.png" alt="Logo" />
            </div>

            <!-- Dashboard -->
            <a class="nav-link @(currentController == "Admin" ? "active" : "")"
               asp-controller="Admin" asp-action="Index"
               data-bs-toggle="tooltip" title="Dashboard">
                <i class="fas fa-gauge-high"></i>
            </a>

            <!-- Qu·∫£n l√Ω ng∆∞·ªùi d√πng -->
            <a class="nav-link @(currentController == "AdminUsers" ? "active" : "")"
               asp-controller="AdminUsers" asp-action="Index"
               data-bs-toggle="tooltip" title="Qu·∫£n l√Ω ng∆∞·ªùi d√πng">
                <i class="fas fa-users-gear"></i>
            </a>

            <!-- Qu·∫£n l√Ω t√†i x·∫ø -->
            <a class="nav-link @(currentController == "AdminDrivers" ? "active" : "")"
               asp-controller="AdminDrivers" asp-action="Index"
               data-bs-toggle="tooltip" title="Qu·∫£n l√Ω t√†i x·∫ø">
                <i class="fas fa-truck-fast"></i>
            </a>

            <!-- ƒê∆°n m·ªõi / ƒêi·ªÅu ph·ªëi -->
            <a class="nav-link @(currentController == "AdminOrders" && (ViewContext.RouteData.Values["action"]?.ToString() == "NewOrders") ? "active" : "")"
               asp-controller="AdminOrders" asp-action="NewOrders"
               data-bs-toggle="tooltip" title="ƒê∆°n m·ªõi / ƒêi·ªÅu ph·ªëi">
                <i class="fas fa-diagram-project"></i>
            </a>

            <!-- T·∫•t c·∫£ ƒë∆°n h√†ng -->
            <a class="nav-link @(currentController == "AdminOrders" && (ViewContext.RouteData.Values["action"]?.ToString() != "NewOrders") ? "active" : "")"
               asp-controller="AdminOrders" asp-action="Index"
               data-bs-toggle="tooltip" title="T·∫•t c·∫£ ƒë∆°n h√†ng">
                <i class="fas fa-boxes-stacked"></i>
            </a>

            <!-- Khu v·ª±c giao -->
            <a class="nav-link @(currentController == "AdminRegions" ? "active" : "")"
               asp-controller="AdminRegions" asp-action="Index"
               data-bs-toggle="tooltip" title="Khu v·ª±c giao">
                <i class="fas fa-map-location-dot"></i>
            </a>

            <!-- Khi·∫øu n·∫°i -->
            <a class="nav-link @(currentController == "AdminComplaints" ? "active" : "")"
               asp-controller="AdminComplaints" asp-action="Index"
               data-bs-toggle="tooltip" title="Khi·∫øu n·∫°i">
                <i class="fas fa-triangle-exclamation"></i>
            </a>

            <!-- B√°o c√°o -->
            <a class="nav-link @(currentController == "AdminReports" ? "active" : "")"
               asp-controller="AdminReports" asp-action="Overview"
               data-bs-toggle="tooltip" title="B√°o c√°o & th·ªëng k√™">
                <i class="fas fa-chart-line"></i>
            </a>

            <!-- Nh·∫≠t k√Ω thao t√°c -->
            <a class="nav-link @(currentController == "AdminAuditLogs" ? "active" : "")"
               asp-controller="AdminAuditLogs" asp-action="Index"
               data-bs-toggle="tooltip" title="Nh·∫≠t k√Ω thao t√°c">
                <i class="fas fa-book"></i>
            </a>

            <!-- ƒêƒÉng xu·∫•t -->
            <a class="nav-link mt-auto"
               asp-controller="Auth" asp-action="Logout"
               data-bs-toggle="tooltip" title="ƒêƒÉng xu·∫•t">
                <i class="fas fa-sign-out-alt text-danger"></i>
            </a>
        </div>

        <!-- Main content -->
        <div class="main-content flex-grow-1">
            <!-- Topbar -->
            <div class="topbar">
                <div class="input-group search-box" style="max-width: 300px;">
                    <span class="input-group-text border-end-0">
                        <i class="fas fa-search text-muted"></i>
                    </span>
                    <!-- Admin search: t√¨m ƒë∆°n theo m√£ -->
                    <form asp-controller="AdminOrders" asp-action="Search" method="get" class="d-flex">
                        <input name="code" type="text" class="form-control border-start-0" placeholder="T√¨m nhanh m√£ ƒë∆°n..." />
                    </form>
                </div>

                <div class="d-flex align-items-center" style="gap:20px;">
                    <!-- N√∫t Dark Mode -->
                    <button id="themeToggleAdmin" class="btn btn-light border rounded-circle" title="Chuy·ªÉn ch·∫ø ƒë·ªô">
                        <i class="fas fa-moon"></i>
                    </button>

                    <!-- Notification (sau n√†y bind s·ªë th·∫≠t) -->
                    <a href="@Url.Action("Index","AdminComplaints")" class="position-relative text-decoration-none text-dark">
                        <i class="fas fa-bell fa-lg"></i>
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                            5
                        </span>
                    </a>

                    <!-- User -->
                    <div class="dropdown">
                        <a class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle"
                           href="#" id="userMenuAdmin" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="me-2 fw-bold">@adminName</span>
                            <img src="~/images/avatar.png" alt="Admin" class="rounded-circle" width="32" height="32">
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userMenuAdmin">
                            <li><a class="dropdown-item" asp-controller="AdminProfile" asp-action="Index">H·ªì s∆° qu·∫£n tr·ªã</a></li>
                            <li><a class="dropdown-item" asp-controller="Auth" asp-action="Logout">ƒêƒÉng xu·∫•t</a></li>
                        </ul>
                    </div>
                </div>
            </div>

            <main class="container-fluid py-4">
                @RenderBody()
            </main>

            <footer class="text-muted text-center mt-auto">
                &copy; 2025 - WedNightFury Admin - <a asp-controller="Home" asp-action="Privacy">Ch√≠nh s√°ch</a>
            </footer>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Tooltip
        const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        const tooltipList = [...tooltipTriggerList].map(t => new bootstrap.Tooltip(t));

        // Logo click reload
        document.addEventListener("DOMContentLoaded", function () {
            const logo = document.getElementById("logoResetAdmin");
            if (logo) logo.addEventListener("click", () => location.href = "@Url.Action("Index","Admin")");
        });

        // üåô Dark Mode Toggle cho admin (key ri√™ng)
        document.addEventListener("DOMContentLoaded", function () {
            const toggle = document.getElementById("themeToggleAdmin");
            const body = document.body;

            // Load saved theme
            if (localStorage.getItem("admin-theme") === "dark") {
                body.classList.add("dark-mode-admin");
                toggle.innerHTML = '<i class="fas fa-sun"></i>';
                toggle.classList.replace("btn-light", "btn-dark");
            }

            toggle.addEventListener("click", function () {
                body.classList.toggle("dark-mode-admin");
                const isDark = body.classList.contains("dark-mode-admin");

                if (isDark) {
                    toggle.innerHTML = '<i class="fas fa-sun"></i>';
                    toggle.classList.replace("btn-light", "btn-dark");
                    localStorage.setItem("admin-theme", "dark");
                } else {
                    toggle.innerHTML = '<i class="fas fa-moon"></i>';
                    toggle.classList.replace("btn-dark", "btn-light");
                    localStorage.setItem("admin-theme", "light");
                }
            });
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
