@using WedNightFury.Models.ViewModels
@model AdminDriverEditViewModel

@{
    ViewData["Title"] = "Xóa tài xế";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container py-3">
    <h2 class="mb-3 text-danger">Xóa tài xế</h2>

    <div class="alert alert-warning">
        Bạn có chắc chắn muốn xóa tài xế dưới đây không? Hành động này không thể hoàn tác.
    </div>

    <div class="card mb-3">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3">UserName</dt>
                <dd class="col-sm-9">@Model.UserName</dd>

                <dt class="col-sm-3">Họ tên</dt>
                <dd class="col-sm-9">@Model.FullName</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">SĐT</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">CMND/CCCD</dt>
                <dd class="col-sm-9">@Model.CitizenId</dd>

                <dt class="col-sm-3">Khu vực</dt>
                <dd class="col-sm-9">
                    @(string.Join(" - ", new[] { Model.Ward, Model.District, Model.City }
                        .Where(x => !string.IsNullOrWhiteSpace(x))))
                </dd>

                <dt class="col-sm-3">Địa chỉ chi tiết</dt>
                <dd class="col-sm-9">@Model.Address</dd>

                <dt class="col-sm-3">Đơn vị / Đối tác</dt>
                <dd class="col-sm-9">@Model.CompanyName</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()

        <!-- id để map vào DeleteConfirmed(int id) -->
        <input type="hidden" name="id" value="@Model.UserId" />

        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        <button type="submit" class="btn btn-danger ms-2">
            <i class="bi bi-trash"></i> Xóa tài xế
        </button>
    </form>
</div>
