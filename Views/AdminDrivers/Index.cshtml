@using WedNightFury.Models.ViewModels
@model IEnumerable<AdminDriverListItemViewModel>

@{
    ViewData["Title"] = "Quản lý tài xế";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    var totalDrivers = Model?.Count() ?? 0;
    var today = DateTime.Today;
    var newToday = Model?.Count(d => d.CreatedAt.Date == today) ?? 0;
    var thisMonth = new DateTime(today.Year, today.Month, 1);
    var newThisMonth = Model?.Count(d => d.CreatedAt >= thisMonth) ?? 0;
}

<div class="container-fluid py-3">

    <!-- Header + stats -->
    <div class="d-flex flex-wrap align-items-center justify-content-between mb-3">
        <div>
            <h2 class="mb-1 fw-semibold">Quản lý tài xế</h2>
            <p class="text-muted mb-0">
                Theo dõi và quản lý hồ sơ tài xế NightFury.
            </p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Create" class="btn btn-success fw-semibold">
                + Thêm tài xế
            </a>
        </div>
    </div>

    <!-- Stat cards -->
    <div class="row g-3 mb-3">
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-uppercase small text-muted mb-1">Tổng tài xế</div>
                        <div class="fs-4 fw-bold">@totalDrivers</div>
                    </div>
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                        <span class="fw-bold text-primary">TX</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-uppercase small text-muted mb-1">Đăng ký hôm nay</div>
                        <div class="fs-4 fw-bold">@newToday</div>
                    </div>
                    <div class="rounded-circle bg-success bg-opacity-10 p-3">
                        <span class="fw-bold text-success">+1d</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-uppercase small text-muted mb-1">Đăng ký trong tháng</div>
                        <div class="fs-4 fw-bold">@newThisMonth</div>
                    </div>
                    <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                        <span class="fw-bold text-warning">@today.ToString("MM")</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Search + filter -->
    <div class="card shadow-sm border-0">
        <div class="card-body pb-0">
            <form method="get" class="row g-2 align-items-center">
                <div class="col-md-5">
                    <div class="input-group">
                        <span class="input-group-text bg-white">
                            <i class="bi bi-search"></i>
                        </span>
                        <input type="text"
                               name="search"
                               value="@ViewBag.Search"
                               class="form-control"
                               placeholder="Tìm theo tên / SĐT / username" />
                    </div>
                </div>
                <div class="col-md-7 d-flex justify-content-md-end gap-2">
                    <button type="submit" class="btn btn-primary">
                        Tìm kiếm
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        Xóa lọc
                    </a>
                </div>
            </form>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width:60px;">#</th>
                        <th>Username</th>
                        <th>Họ tên</th>
                        <th>SĐT</th>
                        <th>Email</th>
                        <th>CMND/CCCD</th>
                        <th>Khu vực</th>
                        <th style="width:120px;">Ngày tạo</th>
                        <th style="width:160px;" class="text-end">Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                @{
                    var index = 1;
                }
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        string location = "";

                        if (!string.IsNullOrEmpty(item.District) && !string.IsNullOrEmpty(item.City))
                        {
                            location = item.District + " - " + item.City;
                        }
                        else if (!string.IsNullOrEmpty(item.District))
                        {
                            location = item.District!;
                        }
                        else if (!string.IsNullOrEmpty(item.City))
                        {
                            location = item.City!;
                        }

                        <tr>
                            <td class="text-muted">@index</td>
                            <td class="fw-semibold">@item.UserName</td>
                            <td>@item.FullName</td>
                            <td>@item.Phone</td>
                            <td class="text-truncate" style="max-width:180px;">@item.Email</td>
                            <td>@item.CitizenId</td>
                            <td>@location</td>
                            <td>@item.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td class="text-end">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details"
                                       asp-route-id="@item.UserId"
                                       class="btn btn-outline-secondary">
                                        Xem
                                    </a>
                                    <a asp-action="Edit"
                                       asp-route-id="@item.UserId"
                                       class="btn btn-outline-primary">
                                        Sửa
                                    </a>
                                    <a asp-action="Delete"
                                       asp-route-id="@item.UserId"
                                       class="btn btn-outline-danger">
                                        Xóa
                                    </a>
                                </div>
                            </td>
                        </tr>
                        index++;
                    }
                }
                else
                {
                    <tr>
                        <td colspan="9" class="text-center py-4 text-muted">
                            Chưa có tài xế nào trong hệ thống.
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>
