@model WedNightFury.Models.ViewModels.DeliveredViewModel

<h2 class="fw-bold mb-4 text-success">
    ✔ Xác nhận giao thành công
</h2>

<form asp-action="Delivered" method="post" enctype="multipart/form-data">

    <input type="hidden" asp-for="OrderId" />

    <p><strong>Mã đơn:</strong> @Model.Code</p>
    <p><strong>Người nhận:</strong> @Model.ReceiverName</p>
    <p><strong>Địa chỉ:</strong> @Model.ReceiverAddress</p>

    <div class="mb-3">
        <label class="fw-bold">Ảnh POD (bắt buộc)</label>
        <input asp-for="PodImage" type="file" accept="image/*" class="form-control" required />
        <span asp-validation-for="PodImage" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="fw-bold">Ghi chú</label>
        <textarea asp-for="Note" class="form-control"></textarea>
    </div>

    <button type="submit" class="btn btn-success btn-lg">
        ✔ Xác nhận giao hàng
    </button>
</form>
