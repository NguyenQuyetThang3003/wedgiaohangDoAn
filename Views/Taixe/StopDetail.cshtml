                <div class="modal-body">

                    <label class="fw-bold">S·ªë ti·ªÅn thu:</label>
                    <input name="cod" class="form-control mb-3"
                           value="@Model.CodAmount" readonly />

                    <label class="fw-bold">Ch·ªØ k√Ω ng∆∞·ªùi nh·∫≠n:</label>
                    <canvas id="signPad" style="width:100%;height:200px;border:1px solid #aaa;"></canvas>

                    <input type="hidden" name="signature" id="signatureInput" />
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="clearPad()">X√≥a</button>
                    <button type="submit" class="btn btn-success">X√°c nh·∫≠n</button>
                </div>

            </form>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/signature_pad@4.0.0/dist/signature_pad.umd.min.js"></script>
<script>
    let modal;
    let pad;

    function openCodModal() {
        modal = new bootstrap.Modal(document.getElementById("codModal"));
        modal.show();

        let canvas = document.getElementById("signPad");
        pad = new SignaturePad(canvas);
    }

    function clearPad() {
        pad.clear();
    }

    document.querySelector("form").onsubmit = function () {
        if (pad && !pad.isEmpty()) {
            document.getElementById("signatureInput").value = pad.toDataURL();
        }
    };
</script>
