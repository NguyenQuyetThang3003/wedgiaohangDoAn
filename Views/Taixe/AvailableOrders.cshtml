@model List<WedNightFury.Models.Order>

@{
    ViewData["Title"] = "Đơn hàng chưa nhận";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

<style>
    .order-card {
        background: #fff;
        padding: 20px;
        border-radius: 12px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.08);
        transition: 0.25s;
    }
    .order-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 6px 14px rgba(0,0,0,0.12);
    }
    .btn-accept {
        border-radius: 10px;
        padding: 10px 18px;
        font-weight: 600;
        font-size: 14px;
    }
    .empty-box {
        text-align: center;
        padding: 40px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }
</style>

<h2 class="fw-bold text-danger mb-4">
    <i class="bi bi-box-seam-fill"></i> ĐƠN HÀNG CHƯA NHẬN (HỎA TỐC)
</h2>

@if (!Model.Any())
{
    <div class="empty-box">
        <img src="/images/empty.png" width="140" class="mb-3" />
        <h5 class="text-muted">Không có đơn hỏa tốc nào đang chờ nhận</h5>
    </div>
}
else
{
    <div class="row g-3">
        @foreach (var o in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="order-card">

                    <h5 class="fw-bold text-primary mb-1">
                        <i class="bi bi-receipt"></i> @o.Code
                    </h5>

                    <span class="badge bg-danger mb-2">Hỏa tốc</span>

                    <div class="mt-1 small">
                        <div><b>Người nhận:</b> @o.ReceiverName</div>
                        <div><b>Địa chỉ:</b> @o.ReceiverAddress</div>
                        <div><b>Giá trị:</b> @o.Value.ToString("N0") đ</div>
                    </div>

                    <form asp-action="AcceptOrder" method="post" class="mt-3">
                        <input type="hidden" name="id" value="@o.Id" />
                        <button class="btn btn-success w-100 btn-accept">
                            <i class="bi bi-check-circle"></i> Nhận đơn ngay
                        </button>
                    </form>

                </div>
            </div>
        }
    </div>
}
